name: CodeClimate Analysis

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  codeclimate:
    name: Run CodeClimate Analysis
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Install CodeClimate CLI
        run: |
          curl -L https://github.com/codeclimate/test-reporter/releases/download/latest/codeclimate-test-reporter-linux-amd64 -o codeclimate-test-reporter
          chmod +x codeclimate-test-reporter
          sudo mv codeclimate-test-reporter /usr/local/bin

      - name: Run PHP Unit Tests
        env:
          CC_TEST_REPORTER_ID: ${{ secrets.CC_TEST_REPORTER_ID }}
        run: |
          codeclimate-test-reporter before-build
          php vendor/bin/phpunit --coverage-text
          codeclimate-test-reporter after-build --exit-code $?
